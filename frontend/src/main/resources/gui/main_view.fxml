<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Accordion?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.gui.controllers.MainController">
   <children>
      <SplitPane dividerPositions="0.2" VBox.vgrow="ALWAYS">
         <items>
            <VBox prefHeight="200.0" prefWidth="100.0" SplitPane.resizableWithParent="false">
               <children>
                  <Label text="Меню навигации">
                     <VBox.margin>
                        <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
                     </VBox.margin>
                  </Label>
                  <Accordion>
                    <panes>
                      <TitledPane text="Предприятие">
                           <content>
                              <VBox prefHeight="200.0" prefWidth="100.0">
                                 <children>
                                    <Button fx:id="departmentButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#openDepartments" text="Цеха">
                                       <VBox.margin>
                                          <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                                       </VBox.margin>
                                    </Button>
                                    <Button fx:id="departmentRegionButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#openDepartmentRegions" text="Участки">
                                       <VBox.margin>
                                          <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                                       </VBox.margin>
                                    </Button>
                                    <Button fx:id="brigadeButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#openBrigades" text="Бригады">
                                       <VBox.margin>
                                          <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                                       </VBox.margin>
                                    </Button>
                                    <Button fx:id="departmentChiefButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#openDepartmentChiefs" text="Начальники цехов">
                                       <VBox.margin>
                                          <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                                       </VBox.margin>
                                    </Button>
                                    <Button fx:id="departmentRegionChiefButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#openDepartmentRegionChiefs" text="Начальники участков">
                                       <VBox.margin>
                                          <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                                       </VBox.margin>
                                    </Button>
                                    <Button fx:id="brigadierButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#openBrigadiers" text="Бригадиры">
                                       <VBox.margin>
                                          <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                                       </VBox.margin>
                                    </Button>
                                    <Button fx:id="masterButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#openMasters" text="Мастера">
                                       <VBox.margin>
                                          <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                                       </VBox.margin>
                                    </Button>
                                    <Button fx:id="testerButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#openTesters" text="Лабораторные сотрудники">
                                       <VBox.margin>
                                          <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                                       </VBox.margin>
                                    </Button>
                                    <Button fx:id="employeeButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#openEmployees" text="Сотрудники">
                                       <VBox.margin>
                                          <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                                       </VBox.margin>
                                    </Button>
                                 </children>
                              </VBox>
                           </content>
                      </TitledPane>
                      <TitledPane text="Заказы">
                           <content>
                              <VBox prefHeight="200.0" prefWidth="100.0">
                                 <children>
                                    <Button fx:id="productButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#openProducts" text="Изделия">
                                       <VBox.margin>
                                          <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                                       </VBox.margin>
                                    </Button>
                                    <Button fx:id="laboratoryOrderButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#openLaboratoryOrders" text="Тестирование">
                                       <VBox.margin>
                                          <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                                       </VBox.margin>
                                    </Button>
                                 </children>
                              </VBox>
                           </content>
                      </TitledPane>
                      <TitledPane text="Лаборатории">
                           <content>
                              <VBox prefHeight="200.0" prefWidth="100.0">
                                 <children>
                                    <Button fx:id="laboratoryButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#openLaboratories" text="Лаборатории">
                                       <VBox.margin>
                                          <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                                       </VBox.margin>
                                    </Button>
                                    <Button fx:id="testButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#openTests" text="Испытания">
                                       <VBox.margin>
                                          <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                                       </VBox.margin>
                                    </Button>
                                 </children>
                              </VBox>
                           </content>
                      </TitledPane>
                    </panes>
                  </Accordion>
               </children>
            </VBox>
            <TabPane fx:id="contentTabPane">
               <tabs>
                  <Tab fx:id="defaultTab" closable="false" text="Главный экран">
                     <content>
                        <VBox alignment="CENTER" maxWidth="1.7976931348623157E308">
                           <children>
                              <Label text="Добро пожаловать в информационную система автомобилестроительного предприятия&#10;Воспользуйтесь меню навигации для получения&#10;необходимой информации" textAlignment="CENTER">
                                 <font>
                                    <Font name="System Italic" size="17.0" />
                                 </font>
                              </Label>
                           </children>
                        </VBox>
                     </content>
                  </Tab>
               </tabs>
            </TabPane>
         </items>
      </SplitPane>
      <Label fx:id="statusBarLabel" VBox.vgrow="NEVER" />
   </children>
</VBox>
